
@model List<Escuela.Dominio.Erollement>
@{ ViewData["Title"] = "Home Page"; }

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@Html.ActionLink("Insertar", "Insert", new { @class = "btn btn-success" })


<table id="mitabla" class="table table-dark table-striped">

    <thead>
        <tr>
            <th>Enrollemnt ID</th>
            <th>Student ID</th>
            <th>Course ID</th>
            <th>LastName</th>
            <th>FirstMidName</th>
            <th>Curso</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var iteracion in  Model)
        {
            <tr>
                <td>@iteracion.ErollementID</td>
                <td>@iteracion.StudentID</td>
                <td>@iteracion.Course.CourseId</td>
                <td>@iteracion.Student.LastName</td>
                <td>@iteracion.Student.FirstMidName</td>
                <td>@iteracion.Course.Title</td>
            </tr>
}
    </tbody>

</table>

@section scripts{

    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var tabla = $('#mitabla').DataTable();
        });


    </script>



    }

























